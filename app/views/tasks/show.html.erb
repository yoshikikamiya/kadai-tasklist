<h1>id: <%= @task.id %> のメッセージ詳細ページ</h1>

<table class="table table-bordered">
    <tr>
        <th>id</th>
        <td><%= @task.id %></td>
    </tr>
    <tr>
        <th>ステータス</th>
        <td><%= @task.status %></td>
    </tr>
    <tr>
        <th><タスク</th>
        <td><%= @task.content %></td>
    </tr>
</table>

<p>ステータス: <%= @task.status %></p>
<p>タスク: <%= @task.content %></p>

<%= link_to '一覧に戻る', tasks_path %>
<%= link_to 'このメッセージを編集する', edit_task_path(@task),class:'btn btn-light' %>
<%= link_to 'このメッセージを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' },class: 'btn btn-danger' %>
