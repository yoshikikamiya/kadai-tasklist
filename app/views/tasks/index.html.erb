<% if logged_in? %>
<p>ログイン完了ユーザ：<%= current_user.name %></p>

<h1>タスク一覧</h1>

<table class="table table-striped" >
    <thead>
        <tr>
            <th>id</th>
            <th>ステータス</th>
            <th>タスク</th>
        </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
        <tr>
            <td><%= link_to task.id, task %></td>
            <td><%= task.status %></td>
            <td><%= task.content %></td>
        </tr>
        <% end %>
    </tbody>
</table>


<% else %>
   redirect_to sessions/new
<% end %>